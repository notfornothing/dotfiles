#!/usr/bin/env sh

# for this to work you must configure sudo such that
# it will be able to run the command without password

yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

# .. more yabai startup stuff
#

# global settings
yabai -m config                                 \
    external_bar                 off:40:0       \
    menubar_opacity              1.0            \
    mouse_follows_focus          off            \
    focus_follows_mouse          off            \
    display_arrangement_order    default        \
    window_origin_display        default        \
    window_placement             second_child   \
    window_insertion_point       focused        \
    window_zoom_persist          on             \
    window_shadow                on             \
    window_animation_duration    0.0            \
    window_animation_easing      ease_out_circ  \
    window_opacity_duration      0.0            \
    active_window_opacity        1.0            \
    normal_window_opacity        0.90           \
    window_opacity               off            \
    insert_feedback_color        0xffd75f5f     \
    split_ratio                  0.50           \
    split_type                   auto           \
    auto_balance                 off            \
    top_padding                  0             \
    bottom_padding               0             \
    left_padding                 0             \
    right_padding                0             \
    window_gap                   0             \
    layout                       float

echo "yabai configuration loaded.."


# 禁用自动平铺布局（改为浮动模式）
yabai -m config layout float

# 应用 → 桌面（space 1 仅 Chrome；未明确指定的应用一律 space 16）
yabai -m rule --add app="Google Chrome" space=1
yabai -m rule --add app="IntelliJ IDEA" space=2
yabai -m rule --add app="Cursor" space=3
yabai -m rule --add app="iTerm" space=4
yabai -m rule --add app="ToDesk" space=4
yabai -m rule --add app="NextChat" space=9
yabai -m rule --add app="Cherry Studio" space=10
yabai -m rule --add app="Docker Desktop" space=11
yabai -m rule --add app="访达" space=13
yabai -m rule --add app="Blinko" space=16
yabai -m rule --add app="CleanClip" space=16
yabai -m rule --add app="EnUES" space=16
yabai -m rule --add app="iStat Menus" space=16
yabai -m rule --add app="Karabiner-Elements" space=16
yabai -m rule --add app="Karabiner-EventViewer" space=16
yabai -m rule --add app="Loop" space=16
yabai -m rule --add app="QQ" space=16
yabai -m rule --add app="v2rayN" space=16
yabai -m rule --add app="企业微信" space=16
yabai -m rule --add app="微信" space=16
yabai -m rule --add app="SogouInputSwitchHelper" space=16

# 新窗口创建时最大化（zoom-fullscreen，含菜单栏的“绿点”全屏）

